package nju.edu.cn;

public class BubbleSort {
	
	public void bubbleSort(int[] array, int length){
		if (length <= 1) { return; }
		
		//此处length一定从2开始
		for (int i = 0; i < length - 1; i++) {
			if (array[i] > array[i+1]) {//如果前一个数比后一个数大，则交换
				int temp = array[i+1];
				array[i+1] = array[i];
				array[i] = temp;
			}
		}
	}

}
