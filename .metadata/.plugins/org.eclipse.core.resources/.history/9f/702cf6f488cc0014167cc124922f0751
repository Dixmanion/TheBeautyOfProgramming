package cn.edu.nju.shared;

public class Chef implements Runnable {
	
	private Restaurant r;
	public Chef(Restaurant r) {
		this.r = r;
	}

	@Override
	public void run() {
		try {
			while (!Thread.interrupted()) {
				
				synchronized (this) {
					while (r.meal != null) {
						wait();
					}
				}
				
				
			}
		} catch (Exception e) {
			// TODO: handle exception
		}
	}

}
